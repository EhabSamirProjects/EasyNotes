<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clNewActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notesFragment.NewNoteActivity"
    android:padding="10dp"
    >

    <LinearLayout
        android:id="@+id/llColors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etTitle"
        android:layout_marginBottom="20dp"
        >

        <ImageView
            android:id="@+id/fabWhite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_no_color"
            android:scaleType="centerInside"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabGrey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            app:backgroundTint="@color/grey"

            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabOrange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            app:backgroundTint="@color/orange"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabYellow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            app:backgroundTint="@color/yellow"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabBlue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            app:backgroundTint="@color/blue"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabGreen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            app:backgroundTint="@color/green"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSpringGreen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            app:backgroundTint="@color/spring_green"
            />
<com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabLightRed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            app:backgroundTint="@color/light_red"
            />
<com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabOrchid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            app:backgroundTint="@color/orchid"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter title"
        app:layout_constraintTop_toBottomOf="@id/llColors"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etEnterText"
        />

    <EditText
        android:id="@+id/etEnterText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="enter text"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/etTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fabSaveNote"
        android:gravity="top"
        android:background="@android:color/transparent"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSaveNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_save"
        android:backgroundTint="@color/little_slight_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddSpeech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_speech_to_text_lines"
        android:backgroundTint="@color/little_slight_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageButton
        android:id="@+id/ibSpeech"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="@color/green"
        android:src="@drawable/ic_records"
        android:visibility="gone"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/fabAddSpeech"
        app:layout_constraintRight_toLeftOf="@id/fabSaveNote"
        />

</androidx.constraintlayout.widget.ConstraintLayout>