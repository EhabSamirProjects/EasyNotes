<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:paddingTop="20dp"
    android:paddingBottom="60dp">
    
    <TextView
        android:id="@+id/tvSaveRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Record?"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/etRecordName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter name"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/llColors"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/btnCancelRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't Save"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/etRecordName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnSaveRecord"
        />
    <Button
        android:id="@+id/btnSaveRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/etRecordName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnCancelRecord"
        />



    <LinearLayout
        android:id="@+id/llColors"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvSaveRecord"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etRecordName">

        <ImageView
            android:id="@+id/fabWhite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_no_color"
            android:scaleType="centerInside"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabGrey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            app:backgroundTint="@color/grey"

            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabOrange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            app:backgroundTint="@color/orange"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabYellow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            app:backgroundTint="@color/yellow"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabBlue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            app:backgroundTint="@color/blue"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabGreen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            app:backgroundTint="@color/green"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSpringGreen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            app:backgroundTint="@color/spring_green"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabLightRed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            app:backgroundTint="@color/light_red"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabOrchid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            app:backgroundTint="@color/orchid"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>